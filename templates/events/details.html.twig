{% extends 'base.html.twig' %}
{% block body %}
<div class="offer-info shadow">
            <img src="{{events.img}}" class="card-img-top mt-4" alt="...">
                    <div class="card-body mt-3">
                        <h1 class="card-title fw-bolder text-center">{{events.name}}</h1>
                        <p class="card-text fs-4 text-center"> {{events.email}} </p>
                        <p class="card-text"> {{events.address}} </p>
                    </div>
                    <ul class="list-group text-center">
                        <p class="card-text">{{events.phoneNum}} </p>
                        <li class="list-group-item"><h4 class="card-text price"></h4></li>
                    </ul>
                    <div class="card-body d-flex justify-content-around">
                        <a class="btn btn-default" href="/">Back to Event</a>
                    </div>
                </div>
</div>
{% endblock %}