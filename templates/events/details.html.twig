{% extends 'base.html.twig' %}
{% block body %}
<div class="card shadow" style=" margin: 2rem auto; max-width: 60rem;">
            <img src="{{events.img}}" class="card-img-top mt-4" alt="..." style="object-fit: contain;">
                    <div class="card-body mt-3">
                        <h1 class="card-title fw-bolder text-danger text-center">{{events.name}}</h1>
                        <h5 class="fw-bold text-center"><i class="far fa-calendar-alt"></i> {{ events.dateAndStart|date('l d.m.Y, h:i') }}</h5>
                        <p class="card-text text-center"><i class="fas fa-users"></i> {{events.capacity}} </p>
                        <hr>
                        <h5><i class="fas fa-chevron-right"></i></i> {{events.description}}</h6>
                        <p><i class="fas fa-chevron-right"></i></i> {{events.moreDesc}}</p>
                    </div>
                    <ul class="list-group text-center">
                        <li class="list-group-item">
                            <p class="card-text"><i class="fas fa-map-marker-alt"></i> {{events.address}} </p>
                            <p class="card-text"><i class="fas fa-phone-square"></i> {{events.phoneNum}} </p>
                            <p class="card-text fs-4 text-center"><i class="fas fa-envelope-square"></i> {{events.email}} </p>
                            <a href="{{events.url}}" target="_blank"><i class="fas fa-mouse-pointer"></i> {{events.url}}</a>
                        </li>                    
                    </ul>
                    <div class="card-body d-flex justify-content-around">
                        <a class="btn btn-danger shadow" href="/">Back to Home</a>
                    </div>
                </div>
</div>
{% endblock %}